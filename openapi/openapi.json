{
  "openapi": "3.0.1",
  "info": {
    "title": "FdR - XML to JSON ${service}",
    "version": "1.0.7-1-fix-heap-prod",
    "description": "FDR XML to JSON API REST"
  },
  "paths": {
    "/recover/errors": {
      "get": {
        "summary": "Retry XML Error Processing",
        "operationId": "XmlErrorRetry",
        "parameters": [
          {
            "name": "partitionKey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Date in format 'yyyy-mm-dd' - table fdr1conversionerror"
          },
          {
            "name": "rowKey",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "SessionId (blob metadata) - table fdr1conversionerror"
          }
        ],
        "responses": {
          "200": {
            "description": "Success message",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Recover entities by partitionKey and rowKeys",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "partitionKey": {
                    "type": "string",
                    "example": "2025-03-26"
                  },
                  "rowKeys": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "example": [
                      "0f9aa641-5cd7-474d-a40b-9b815aa02629",
                      "1652bccb-37be-4c25-94bb-45cbc711be56"
                    ]
                  }
                },
                "required": [
                  "partitionKey"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Recovered entities successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": true
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/recover/fdr/{filename}": {
      "get": {
        "summary": "Retry to processing filename",
        "operationId": "HttpTriggerFn",
        "parameters": [
          {
            "name": "filename",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "2025-03-1488888888888-538267747_53d74eb-b-cb74-4b81-b69d-c49390996dad.xml.zip"
            },
            "description": "Blob filename to recover"
          }
        ],
        "responses": {
          "200": {
            "description": "Success message",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/info": {
      "get": {
        "summary": "Get API Info",
        "operationId": "Info",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
